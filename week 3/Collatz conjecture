#include <iostream>
 
int main(){
 
 int n, t=0;

 std::cout << "Type a number: " << std::endl;
 std::cin >> n;
 
 for(int k = 0; n !=1; k++ ){
  
   if(n % 2 == 0){

     t++;   
  
     n = n/2;   

    } 
    
    

   else{  

     t++;

     n = (n * 3) + 1; 
  
    }   
  }
  
 std::cout << "number of steps: " << t;
  
}