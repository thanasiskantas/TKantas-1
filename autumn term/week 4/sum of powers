#include <iostream>
#include <cmath>

int sumpow (int b ,int e){
  
  int s = 0;
  
  for(int i=1; (b!=0 & e!=0 & i<=e); i++){
    
    s = s + std::pow(b,i);


  }
  
  s = s + 1;
 
  return s;
}
  


int main(){
  int x,n;

  std::cout<< "please write the base number: ";
  std::cin>> x;

  std::cout<< "please write the power:";
  std::cin >> n;



  std::cout<< "the sum of powers is equal to: "<< sumpow(x,n);
  }